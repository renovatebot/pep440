{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "lib": ["ES2023"],
    "outDir": "./dist",
    /* https://github.com/microsoft/TypeScript/wiki/Node-Target-Mapping */
    "target": "ES2022",
    "moduleResolution": "node",
    "importHelpers": true,
    "noEmit": true
  },
  "exclude": ["node_modules", "dist"]
}
